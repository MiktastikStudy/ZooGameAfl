<Window x:Class="ZooGameAfl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooGameAfl"
        mc:Ignorable="d"
        Title="ZooGameAfl" Height="350" Width="525">
    <Grid>
        
        <ListBox x:Name="AnimalList" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Feed" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="100" Click="FeedButton_Click"/>
        <Button Content="Info" HorizontalAlignment="Left" Margin="220,50,0,0" VerticalAlignment="Top" Width="100" Click="InfoButton_Click"/>
        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="480" Height="80" IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
